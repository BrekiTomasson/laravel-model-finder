{
  "name": "brekitomasson/laravel-model-finder",
  "description": "A simple trait that makes building your own custom Laravel Model Searches a lot easier.",
  "type": "library",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "BrekiTomasson\\LaravelModelFinder\\": "src/"
    }
  },
  "authors": [
    {
      "name": "Breki Tomasson",
      "email": "breki.tomasson@gmail.com"
    }
  ],
  "minimum-stability": "beta",
  "require": {
    "php": "^8.0",
    "illuminate/support": "^9.28",
    "illuminate/database": "^9.28"
  },
  "require-dev": {
    "pestphp/pest": "^1.22",
    "brekitomasson/php-cs-fixer-breki-config": "^v1.1.3"
  },
  "scripts": {
    "fix": "vendor/bin/php-cs-fixer fix --config ./.php-cs-fixer.php",
    "pest": "vendor/bin/pest --colors=always"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
